# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                               controllers.HomeController.index
GET     /todo/store                     controllers.HomeController.register
GET     /todo/$id<[0-9]+>/edit          controllers.HomeController.edit(id: Long)
GET     /category                       controllers.CategoryController.index
GET     /category/store                 controllers.CategoryController.register
GET     /category/$id<[0-9]+>/edit      controllers.CategoryController.edit(id: Long)

POST    /todo/store                     controllers.HomeController.store
POST    /todo/$id<[0-9]+>/update        controllers.HomeController.update(id: Long)
POST    /todo/$id<[0-9]+>/delete        controllers.HomeController.delete(id: Long)
POST    /category/store                 controllers.CategoryController.store
POST    /category/$id<[0-9]+>/update    controllers.CategoryController.update(id: Long)
POST    /category/$id<[0-9]+>/delete    controllers.CategoryController.delete(id: Long)

GET     /api/todo                       controllers.api.TodoApiController.index
POST    /api/todo                       controllers.api.TodoApiController.store
PUT     /api/todo                       controllers.api.TodoApiController.update
DELETE  /api/todo/:id                   controllers.api.TodoApiController.delete(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
